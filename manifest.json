{
  "manifest_version": 3,
  "name": "LinkedIn Job Applicant Highlighter",
  "version": "1.3",
  "description": "Shows the number of applicants for a job on LinkedIn without having to click on the job.",
  "permissions": ["storage", "cookies"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*", "https://www.linkedin.com/search/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://www.linkedin.com/jobs/*"],
  "options_page": "options.html",
  "icons": {
    "16": "icons16.png",
    "48": "icons48.png",
    "128": "icons128.png"
  }
}
