{
  "manifest_version": 3,
  "name": "LinkedIn Job Applicant Highlighter",
  "version": "1.3",
  "description": "LinkedIn Job Applicant Highlighter Chrome Extension â€“ Enhance Your Job Search Efficiency",
  "permissions": ["storage", "cookies"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*", "https://www.linkedin.com/search/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://www.linkedin.com/jobs/*"],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  }
}
